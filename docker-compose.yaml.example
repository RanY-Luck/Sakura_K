services:
  nginx:
    image: nginx:latest
    container_name: nginx
    restart: always
    ports:
      - "9088:9088"
    volumes:
      - ./docker_env/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - /usr/local/web:/usr/local/web:ro
    depends_on:
      - sakura_k

  sakura_k:
    container_name: 'sakura_k'
    restart: always
    env_file:
      - .env.docker
    ports:
      - "9099:9099"
    build:
      context: .
      dockerfile: Dockerfile
    environment:
      TZ: "Asia/Shanghai"
      REDIS_HOST: redis
      MYSQL_HOST: mysql
      MYSQL_USER: root
      MYSQL_PASSWORD: 123456
      MYSQL_DATABASE: skf
      MYSQL_PORT: 3306
    volumes:
      - ../sakura_k:/app
    depends_on:
      - redis
      - mysql

  redis:
    image: redis:latest
    container_name: redis
    restart: always
    ports:
      - "6380:6379"

  mysql:
    image: mysql:latest
    container_name: mysql
    restart: always
    ports:
      - "3307:3306"
    environment:
      TZ: "Asia/Shanghai"
      MYSQL_ROOT_PASSWORD: 123456
      MYSQL_DATABASE: skf
    volumes:
      - mysql_data:/var/lib/mysql


volumes:
  mysql_data: